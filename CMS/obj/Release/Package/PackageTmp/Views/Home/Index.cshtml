@{
    ViewBag.Title = "Mành rèm Tuyết Hùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="trangchu col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <!--Banner + Danh mục sản phẩm và phần giới thiệu + công trình tiêu biểu-->
    <div class="banner col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryProductController">

        <!--Banner + danh mục sản phẩm-->
        <div class="anh col-xs-12 col-sm-12 col-md-9 col-lg-9">

            <!--Ảnh banner-->
            <div class="img col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <img src="~/Content/Front/images/trangchu/banner-bg.png" alt="" />
            </div>

            <!--Phần Danh mục sản phẩm-->
            <div class="danhmuc col-xs-12 col-sm-4 col-md-3 col-lg-3">
                <ul>
                    <li class="title"><i class="fa fa-list"></i>Danh mục sản phẩm</li>
                    <li><a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" ng-repeat="(index, value) in categoryProducts">{{value.title}}</a></li>
                </ul>
            </div>
        </div>

        <!--Phần giới thiệu và công trình tiêu biểu-->
        <div class="gioithieu-congtrinh col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <!--Giới thiệu-->
            <a href="gioi-thieu" class="gioithieu col-xs-6 col-sm-6 col-md-12 col-lg-12">
                <img src="~/Content/Front/images/trangchu/gioithieu.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <div class="opacity col-xs-12 col-sm-12 col-md-12 col-lg-12"></div>
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    Giới thiệu về chúng tôi
                </p>
            </a>

            <!--Công trình tiêu biểu-->
            <a href="/danh-muc-bai-viet/cong-trinh-noi-bat-4" class="tieubieu col-xs-6 col-sm-6 col-md-12 col-lg-12">
                <img src="~/Content/Front/images/trangchu/tieubieu-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <div class="opacity col-xs-12 col-sm-12 col-md-12 col-lg-12"></div>
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    Công trình tiêu biểu
                </p>
            </a>
        </div>
    </div>

    <!--Sản phẩm bán chạy-->
    <article class="banchay col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryProductController">
        <p class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">Sản phẩm bán chạy</p>
        <span us-spinner="{radius:15, width:4, length: 8}"></span>
        <div class="sanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3" dir-paginate="(index, value) in spNoiBats | itemsPerPage:4">
                <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <img ng-src="{{value.image}}" alt="{{value.title}}" /><br />
                    <p>{{value.title}}</p>
                </a>
            </div>
        </div>
    </article>

    <!--Phần các loại rèm-->
    <article class="sanpham col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryProductController">
        <!--Chăn ga-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Chăn ga</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in chanGaProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/changa-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="cg">Chăn ga</span><br />
                    Êm ái - Ấm áp như lòng mẹ
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="chanGas.length > 0" dir-paginate="(index, value) in chanGas | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" /><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="chanGas.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>

        <!--Rèm vải-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Rèm vải</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in remVaiProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/remvai-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="rv">Rèm vải cao cấp</span><br />
                    tinh tế - sang trọng
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="remVais.length > 0" dir-paginate="(index, value) in remVais | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"/><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="remVais.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>

        <!--Rèm cuốn-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Rèm cuốn</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in remCuonProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/remcuon-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="rc">Rèm cuốn</span><br />
                    Tiện nghi - Dễ sử dụng
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="remCuons.length > 0" dir-paginate="(index, value) in remCuons | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" /><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="remCuons.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>

        <!--Rèm sáo-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Rèm sáo</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in remSaoProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/remsao-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="rs">Rèm sáo</span><br />
                    Trang nhã - Lịch sự
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="remSaos.length > 0" dir-paginate="(index, value) in remSaos | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" /><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="remSaos.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>

        <!--Rèm chức năng-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Rèm chức năng</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in remChucNangProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/remchucnang-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="rcn">Rèm chức năng</span><br />
                    Hiệu quả - Tiện lợi
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="remChucNangs.length > 0" dir-paginate="(index, value) in remChucNangs | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" /><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="remChucNangs.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>

        <!--Rèm khác-->
        <div class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="phanloai col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">Rèm khác</p>
                <div class="link col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-repeat="(index, value) in remKhacProducts">{{value.title}}</a>
                </div>
            </div>
            <div class="main col-xs-12 col-sm-8 col-md-4 col-lg-4">
                <img src="~/Content/Front/images/trangchu/remchucnang-1.png" alt="" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
                <p>
                    <span class="rk">Một số loại rèm khác</span><br />
                    Sang trọng - Quý phái
                </p>
            </div>
            <div class="sub col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span us-spinner="{radius:15, width:4, length: 8}"></span>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" ng-show="remKhacs.length > 0" dir-paginate="(index, value) in remKhacs | itemsPerPage:6">
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" /><br />
                        <p>{{value.title}}</p>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="remKhacs.length > 0">
                    <a href="#" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <p>Chưa có sản phẩm</p>
                    </a>
                </div>
            </div>
        </div>
    </article>

    <!--Slide dự án tiêu biểu = công trình tiêu biểu-->
    <article class="duan hidden-xs col-sm-12 col-md-12 col-lg-12" ng-controller="categoryPostController">
        <p class="col-sm-12 col-md-12 col-lg-12">công trình nổi bật</p>
        <div class="col-sm-12 col-md-12 col-lg-12 border-slide">
            <div class="well">
                <div id="myCarousel" class="carousel slide all">
                    <!-- Carousel items -->
                    <div class="carousel-inner pic">
                        <div class="item active">
                            <div class="row">
                                <div class="col-sm-3 frame" dir-paginate="(index, value) in congTrinhNoiBats | itemsPerPage:4">
                                    <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="thumbnail"><img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"></a>
                                </div>
                            </div>
                            <!--/row-->
                        </div>
                        <!--/item-->
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-3" dir-paginate="(index, value) in congTrinhNoiBats | itemsPerPage:4">
                                    <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="thumbnail"><img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"></a>
                                </div>
                            </div>
                            <!--/row-->
                        </div>
                        <!--/item-->
                    </div>
                    <!--/carousel-inner-->
                    <a class="left carousel-control footer-control" href="#myCarousel" data-slide="prev">‹</a>
                    <a class="right carousel-control footer-control" href="#myCarousel" data-slide="next">›</a>
                </div>
                <!--/myCarousel-->
            </div>
            <!--/well-->
        </div>
    </article>

    <!--Tin tức-->
    <article class="tintuc col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryPostController">

        <!--Ảnh đại diện-->
        <img src="~/Content/Front/images/trangchu/remsao-1.png" alt="" class="hidden-xs hidden-sm col-md-3 col-lg-3" />

        <!--Ô chứa video-->
        <div class="video col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/ITDsa_n_IGo" frameborder="0" allowfullscreen></iframe>
        </div>

        <!--Tin tức-->
        <div class="cactintuc col-xs-12 col-sm-12 col-md-5 col-lg-5">
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><span class="fa fa-newspaper-o"></span>Tin tức</p>
            <a href="/bai-viet/{{value.alias}}-{{idPost}}" class="news col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="index == 0" dir-paginate="(index, value) in tinTucs | itemsPerPage:1">
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="col-xs-12 col-sm-3 col-md-3 col-lg-3" />
                <p class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                    <span>{{value.title}}</span><br />
                    <span ng-bind-html="value.content"></span>
                </p>
            </a>
            <div class="list col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul>
                    <li ng-show="index > 0" dir-paginate="(index, value) in tinTucs | itemsPerPage:5"><a href="/bai-viet/{{value.alias}}-{{idPost}}">{{value.title}}</a></li>
                </ul>
                <a href="/danh-muc-bai-viet/tin-tuc-5">Xem thêm</a>
            </div>
        </div>
    </article>
</section>